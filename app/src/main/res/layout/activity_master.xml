<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasterActivity">

    <ImageView
        android:id="@+id/imgMasterLogo"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/surf_logo"
        android:transitionName="@string/transition_name_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLogoMaster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:text="@string/surf_school"
        android:textSize="20sp"
        android:textStyle="bold"
        android:transitionName="@string/transition_name_txt_logo"
        app:layout_constraintBottom_toBottomOf="@+id/imgMasterLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgMasterLogo"
        app:layout_constraintTop_toTopOf="@+id/imgMasterLogo" />

</android.support.constraint.ConstraintLayout>