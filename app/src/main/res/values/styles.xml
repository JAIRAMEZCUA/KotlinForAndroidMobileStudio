<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="ButtonLogin" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonLoginSucces" parent="ButtonLogin">
        <item name="android:background">@android:color/holo_green_dark</item>
        <item name="android:textColor">@android:color/holo_purple</item>
    </style>

    <style name="ButtonLoginError" parent="ButtonLogin">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/holo_red_dark</item>
    </style>

    <style name="ButtonRojo">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>


</resources>
